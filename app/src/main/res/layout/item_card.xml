<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:paddingRight="@dimen/card_spacing"
    android:paddingLeft="@dimen/card_spacing"
    android:paddingTop="@dimen/sub_small_spacing"
                android:id="@+id/rl"
                android:gravity="center_vertical"
                                             android:clickable="true"
                                             android:background="@drawable/bg_card_item"
    android:paddingBottom="@dimen/sub_small_spacing">
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:id="@+id/iv_icon"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/app_name"
        android:textColor="@color/text_color"
        android:textSize="@dimen/medium_text"
        android:layout_toRightOf="@id/iv_icon"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/small_spacing"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/ic_arrow_right"
        android:id="@+id/iv_arrow"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="hint"
        android:textColor="@color/sub_text_color"
        android:layout_toLeftOf="@id/iv_arrow"
        android:textSize="@dimen/sub_medium_text"
        android:layout_marginRight="@dimen/small_spacing"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sub_text_color"
        android:layout_toRightOf="@id/tv_name"
        android:layout_margin="@dimen/small_spacing"
        tools:text="@string/app_name"
        android:layout_centerInParent="true"/>


</RelativeLayout>