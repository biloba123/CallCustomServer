<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:src="@drawable/ic_login"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/medium_spacing">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/medium_text"
                    android:text="用户名/Email"
                    android:gravity="end"
                    android:textColor="@color/text_color"/>
                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="0dp"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/small_spacing"
                    android:paddingStart="@dimen/small_spacing"
                    android:inputType="textEmailAddress"
                    android:text="hezepeng"
                    android:layout_marginStart="@dimen/small_spacing"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/medium_spacing"
                android:paddingRight="@dimen/medium_spacing"
                android:paddingLeft="@dimen/medium_spacing">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/medium_text"
                    android:text="密码"
                    android:gravity="end"
                    android:textColor="@color/text_color"/>
                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="0dp"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/small_spacing"
                    android:paddingStart="@dimen/small_spacing"
                    android:text="123456"
                    android:inputType="textPassword"
                    android:layout_marginStart="@dimen/small_spacing"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/accent_tv"
                android:text="@string/login"
                android:textColor="@color/accent_white"
                android:layout_marginStart="@dimen/medium_spacing"
                android:layout_marginEnd="@dimen/medium_spacing"/>

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/medium_spacing"
                android:textSize="@dimen/sub_medium_text"
                android:layout_marginBottom="@dimen/medium_spacing"
                android:textColor="@color/accent_tv"
                android:text="新用户注册"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>